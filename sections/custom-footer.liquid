          {% endif %}
          {% if block.settings.country_name4 != blank %}
            <li>
              <a href="{{ routes.search_url }}?q={{ block.settings.country_name4 | escape }}">
                {{ block.settings.country_name4 }}
              </a>
            </li>
          {% endif %}
          {% if block.settings.country_name5 != blank %}
            <li>
              <a href="{{ routes.search_url }}?q={{ block.settings.country_name5 | escape }}">
                {{ block.settings.country_name5 }}
              </a>
            </li>
          {% endif %}
          {% if block.settings.country_name6 != blank %}
            <li>
              <a href="{{ routes.search_url }}?q={{ block.settings.country_name6 | escape }}">
                {{ block.settings.country_name6 }}
              </a>
            </li>
          {% endif %}
          {% if block.settings.country_name7 != blank %}
