              <a href="{{ routes.search_url }}?q={{ block.settings.country_name8 | escape }}">
                {{ block.settings.country_name8 }}
              </a>
            </li>
          {% endif %}
          {% if block.settings.country_name9 != blank %}
            <li>
              <a href="{{ routes.search_url }}?q={{ block.settings.country_name9 | escape }}">
                {{ block.settings.country_name9 }}
              </a>
            </li>
          {% endif %}
          {% if block.settings.country_name10 != blank %}
            <li>
              <a href="{{ routes.search_url }}?q={{ block.settings.country_name10 | escape }}">
                {{ block.settings.country_name10 }}
              </a>
            </li>
          {% endif %}
        {% endif %}
      {% endfor %}
    </ul>
  </section>

  <section class="footer__about">
    <h2 class="footer__heading-title">{{ section.settings.about_heading }}</h2>
    <ul class="footer__wrapper">
      {% for block in section.blocks %}
        {% if block.type == 'link' %}
          <li>
            <a href="{{ block.settings.link_url1 }}">{{ block.settings.link_label1 }}</a>
          </li>
          <li>
            <a href="{{ block.settings.link_url2 }}">{{ block.settings.link_label2 }}</a>
          </li>
          <li>
            <a href="{{ block.settings.link_url3 }}">{{ block.settings.link_label3 }}</a>
