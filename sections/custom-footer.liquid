{{ 'section-footer.css' | asset_url | stylesheet_tag }}
<div class="footer">
  <div class="footer-container__wrapper">
  <section class="footer__address">
    {% if section.settings.logo != blank %}
      <img
        class="footer__logo"
        src="{{ section.settings.logo | img_url: 'medium' }}"
        width="208px"
        height="70px"
        alt="Site Logo"
        loading="lazy"
      >
      <div class="footer__address-text">
        <h2 class="footer__heading-title address">{{ section.settings.heading }}</h2>
        <a
            href="{{ section.settings.short_link }}"
            target="_blank"
            rel="noopener noreferrer"
          >
            <p class="footer__heading-desc">{{ section.settings.address }}</p>
          </a>
      </div>
    {% endif %}
  </section>

  <section class="footer__product">
    <h2 class="footer__heading-title">{{ section.settings.popular_country_heading }}</h2>
    <ul class="footer__wrapper">
      {% for block in section.blocks %}
        {% if block.type == 'country' %}
          {% if block.settings.country_name1 != blank %}
            <li>
              <a href="{{ routes.search_url }}?q={{ block.settings.country_name1 | escape }}">
                {{ block.settings.country_name1 }}
              </a>
            </li>
          {% endif %}
          {% if block.settings.country_name2 != blank %}
