            {
              "value": "travel-tips",
              "label": "Travel Tips"
            },
            {
              "value": "travel-guide",
              "label": "Travel Guide"
            }
          ],
          "default": "news"
        },
        {
          "type": "text",
          "id": "hero-title",
          "label": "Hero Title",
          "default": "Featured News"
        },
        {
          "type": "textarea",
          "id": "hero-description",
          "label": "Hero Description",
          "default": "Read our most highlighted content here."
        },
        {
          "type": "page",
          "id": "first-page",
          "label": "First Page"
        },
        {
          "type": "page",
          "id": "second-page",
          "label": "Second Page"
        },
        {
          "type": "page",
          "id": "thrid-page",
          "label": "Third Page"
        },
        {
          "type": "checkbox",
          "id": "show-button",
          "label": "Tampilkan tombol Readmore",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "News Section",
      "category": "Custom",
      "blocks": [
        {
          "type": "news_block"
        }
      ]
    }
  ]
}
{% endschema %}
