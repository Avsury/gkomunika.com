{% style %}
  body {
    margin: 0 auto;
    max-width: 1920px;
  }
  .about-container {
    width: 100%;
    height: 100%;
    padding: 20px 20%;
    display: flex;
    flex-direction: column;
    gap: 50px;
  }
  .about-wrapper {
    display: flex;
    gap: 20px;
    align-items: top;
  }
  .about-logo {
    display: flex;
    text-align: justify;
    align-items: center;
    margin: 0 10%;
    gap: 20px;
  }
  .about-logo h2 {
    margin: 0;
    font-size: var(--font-supper-large);
    color: var(--color-primary);
  }
  .about-image {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .about-image img {
    width: 80%;
    height: auto;
    border-radius: 20px;
  }
  .about__product-wrapper {
    display: flex;
    gap: 10px;
  }
  .about__product-image {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .about__product-img-main {
    max-width: 310px;
    max-height: 310px;
    border-radius: 15px;
  }
  .about__product-img {
    max-width: 150px;
    max-height: 150px;
    border-radius: 15px;
  }
  .about__product-deskripsi {
    margin-bottom: auto;
  }
  .about__product-deskripsi,
  .about__target-wrapper {
    flex: 1;
    background-color: var(--color-neutral);
    padding: 30px;
    border-radius: 15px;
    text-align: justify;
    color: var(--color-primary);
  }
  .about-team {
    display: flex;
    flex-direction: column;
    gap: 50px;
  }
  .about__team-image {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .about__team-text,
  .about__review-text {
    background-color: var(--color-neutral);
    padding: 30px;
    border-radius: 15px;
    text-align: justify;
    color: var(--color-primary);
  }
  .about__team-text h2 {
    text-align: center;
  }
  .about__team-image img {
    aspect-ratio: 3 / 2;
    width: 100%;
    object-fit: cover;
    border-radius: 15px; /* Memberikan sudut membulat */
  }
  .about-owner {
    display: flex;
    gap: 20px;
    align-items: stretch; /* Menyamakan tinggi elemen di dalam flex container */
    height: auto; /* Ubah menjadi auto agar fleksibel sesuai konten */
  }
  .about__owner-image {
    width: 50%;
    height: 50%;
  }
  .about__owner-image img {
    border-radius: 10px;
    width: 100%; /* Untuk memastikan gambar responsif */
    height: 100%; /* Agar tinggi gambar mengikuti tinggi elemen parent */
    object-fit: cover; /* Menjaga rasio gambar tetap proporsional */
    aspect-ratio: 1 / 1;
  }

  .about__owner-text {
    width: 100%;
    border-radius: 15px;
    background-color: var(--color-neutral);
    padding: 10px 30px;
    margin-bottom: 10px;
    color: var(--color-primary);
    display: flex;
    align-items: top;
    flex-direction: column;
    justify-content: center; /* Untuk memastikan konten tetap di tengah */
  }
  .about__owner-text h2 {
    margin: 0;
  }
  .about__owner-text h2,
  .about__review-text h2 {
    text-align: center;
  }
  .about-product h2,
  .about-target h2,
  .about-team h2,
  .about-owner h2,
  .about__review-text h2{
    color: var(--color-primary);
    font-weight: bold;
    margin: 0;
  }
  .about_review,
  .about__product-deskripsi,
  .about__target-wrapper,
  .about__team-text,
  .about__owner-text{
    box-shadow: var(--box-shadow);
  }
  @media (max-width: 768px) {
    .about-container {
      padding: 20px 24px;
    }
    .about-logo {
      display: flex;
      flex-direction: column;
    }
    .about-product {
      display: flex;
      flex-direction: column;
    }
    .about__product-wrapper {
      display: flex;
      justify-content: center;
    }
    .about-target {
      display: flex;
      flex-direction: column;
    }
    .about-owner {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
}
{% endstyle %}

{% if template.name == 'page' and template.suffix == 'about-us' %}
  <div class="about-container">
    {% if section.settings.logo != blank %}
      <section class="about-logo">
        <div class="about_wrapper">
          <img
            src="{{ section.settings.logo | img_url: 'medium' }}"
            alt=""
            width="250px"
            height="auto"
            loading="lazy"
          >
        </div>
        <div class="about__logo-text">
          <h2>{{ section.settings['logo-text'] }}</h2>
        </div>
      </section>
    {% endif %}
    {% if section.settings['about-image'] != blank %}
      <div class="about-image">
        <img
          src="{{ section.settings.about-image | img_url: 'master' }}"
          alt=""
          width="350px"
          height="auto"
          loading="lazy"
        >
      </div>
    {% endif %}

    {% for block in section.blocks %}
      {% if block.type == 'about-product' %}
        <section class="about-product about-wrapper">
          <div class="about__product-deskripsi">
            <h2>{{ block.settings['product-heading'] }}</h2>
            <p>{{ block.settings.product_paragraph }}</p>
            <ul>
              {% if block.settings.product_list_1 != blank %}
                <li>{{ block.settings.product_list_1 }}</li>
              {% endif %}
              {% if block.settings.product_list_2 != blank %}
                <li>{{ block.settings.product_list_2 }}</li>
              {% endif %}
              {% if block.settings.product_list_3 != blank %}
                <li>{{ block.settings.product_list_3 }}</li>
              {% endif %}
              {% if block.settings.product_list_4 != blank %}
                <li>{{ block.settings.product_list_4 }}</li>
              {% endif %}
              {% if block.settings.product_list_5 != blank %}
                <li>{{ block.settings.product_list_5 }}</li>
              {% endif %}
            </ul>
          </div>
          <div class="about__product-wrapper">
          <div>
              <img
                src="{{ block.settings.product-image1 | image_url }}"
                alt=""
                width="100%"
                height="100%"
                class="about__product-img-main"
              >
            </div>
          <div class="about__product-image">
            
              <img
                src="{{ block.settings.product-image2 | image_url }}"
                alt=""
                width="100%"
                height="100%"
                class="about__product-img"
              >
            
              <img
                src="{{ block.settings.product-image3 | image_url }}"
                alt=""
                width="100%"
                height="100%"
                class="about__product-img"
              >
          </div>
          </div>
        </section>
      {% endif %}

      {% if block.type == 'about-target' %}
        <section class="about-target about-wrapper">
          <div class="about__target-wrapper">
            <h2>{{ block.settings['visi-heading'] }}</h2>
            <p>{{ block.settings['visi-paragraph'] }}</p>
          </div>
          <div class="about__target-wrapper">
            <h2>{{ block.settings['misi-heading'] }}</h2>
            <p>{{ block.settings['misi-paragraph'] }}</p>
          </div>
        </section>
      {% endif %}

      {% if block.type == 'about-team' %}
        <section class="about-team">
          <div class="about__team-text">
            <h2>{{ block.settings['team-heading'] }}</h2>
            <p>{{ block.settings['team-paragraph'] }}</p>
          </div>
          <div class="about__team-image about-wrapper">
            <div>
              <img
                src="{{ block.settings.team-image1 | image_url }}"
                alt=""
                width="auto"
                height="auto"
              >
            </div>
            <div>
              <img
                src="{{ block.settings.team-image2 | image_url }}"
                alt=""
                width="auto"
                height="auto"
              >
            </div>
          </div>
        </section>
      {% endif %}

      {% if block.type == 'about-owner' %}
        <section class="about-owner">
          <div class="about__owner-image">
            <img
              src="{{ block.settings.owner-image | image_url }}"
              alt=""
              loading="lazy"
            >
          </div>
          <div class="about__owner-text">
            <h2>{{ block.settings['owner-heading'] }}</h2>
            <p>{{ block.settings['owner-paragraph'] }}</p>
          </div>
        </section>
      {% endif %}

      {% if block.type == 'about-review' %}
        <section class="about_review">
          <div class="about__review-text">
            <h2>{{ block.settings['review-heading'] }}</h2>
            <p>{{ block.settings['review-paragraph'] }}</p>
          </div>
        </section>
      {% endif %}
    {% endfor %}
  </div>
{% endif %}

<script type="application/ld+json">
  {{ page | structured_data }}
</script>

