<link rel="stylesheet" href="{{ 'main-account.css' | asset_url }}">

<div class="ma-container">
  <section class="ma-section-order-history-container">
    <div id="order-history">
      <section class="ma-section-order-history">
        {% for order in customer.orders %}
          <div class="ma-section-order-history-wrapper">
            <div id="ma-section-order-history-wrapper">
              <div class="ma-order-history-wrapper">
                <div class="ma-order-history-invoice">
                  <img src="{{ 'border-inv.svg' | asset_url }}">
                  <h2>{{ order.created_at | date: '%d/%m/%Y %H:%M' }}</h2>
                </div>
                <h2>#{{ order.name }}</h2>
              </div>

              {% for line_item in order.line_items %}
                <div class="ma-order-history-wrapper">
                  <div class="ma-product-wrapper" data-order-id="{{ order.id }}">
                    {% assign countries_array = line_item.product.metafields.coverage.country.value %}
                    {% assign total_countries = countries_array.size %}
                    {% if total_countries == 1 %}
                      {% assign country_trimmed = countries_array.first | strip | downcase %}
                      {% assign country_filename = country_trimmed | replace: ' ', '-' | capitalize | append: '.svg' %}
                      <img
                        class="ma-product-icon-single-flag"
                        src="{{ country_filename | file_url }}"
                        alt="{{ country_trimmed }}"
                        width="40"
                        height="40"
                      >
                    {% elsif total_countries > 1 %}
                      <div class="ma-product-multi-flag">
                        {% for country in countries_array limit: 3 %}
                          {% assign country_trimmed = country | strip | downcase %}
                          {% assign country_filename = country_trimmed
                            | replace: ' ', '-'
                            | capitalize
                            | append: '.svg'
                          %}
                          <img
                            class="ma-product-icon-multi-flag"
                            src="{{ country_filename | file_url }}"
                            alt="{{ country_trimmed }}"
                            width="25"
                            height="25"
                          >
                        {% endfor %}
                        {% if total_countries > 3 %}
                          <div class="ma-product-flag-count">
                            <span>+{{ total_countries | minus: 3 }}</span>
                          </div>
                        {% endif %}
                      </div>
                    {% endif %}

                    <div class="ma-order-product-name">
                      {% assign product_name_only = line_item.title | split: ' - ' | first %}
                      {% assign product_name = line_item.product.title %}
                      {% assign variant_name = line_item.title | remove: product_name | strip %}
                      {%- assign variant_parts = variant_name | split: ' / ' -%}
                      {% assign formatted_variant = variant_parts | join: ', ' %}
                      {% assign formatted_variant = formatted_variant | strip | remove_first: '-' | strip %}
                      <h2>{{ product_name_only }}</h2>
                      <h2>{{ formatted_variant }}</h2>
                    </div>
                  </div>
                  <div class="ma-order-quantity">
                      <p>x {{ line_item.quantity }}</p>
                      <p>{{ line_item.price | money_with_currency }}</p>
                  </div>
                </div>
              {% endfor %}
            </div>
            <div class="ma-section-order-history-wrapper order-details-container">
              <div class="ma-order-details">
                <div class="ma-order-details-wrapper">
                  <h2 class="bold">eSIM Details</h2>
                  <h3>QR SENT TO: <span>{{ order.email }}</span></h3>
                    {% for data in order.metafields.sim_card.details.value.activation_code %}
                      <section class="ma-order-redeem">
                        <div class="ma-order-details-card card">
                          <div class="ma-redeem-wrapper" onclick="toggleDetails(this)">
                            <div class="ma-redeem-index">
                              <span>QR #{{ forloop.index }}</span>
                              <div class="ma-redeem-product-name">
                                {% assign product_name_only = line_item.title | split: ' - ' | first %}
{% assign product_name = line_item.product.title %}
{% assign variant_name = line_item.title | remove: product_name | strip %}
{%- assign variant_parts = variant_name | split: ' / ' -%}
{% assign formatted_variant = variant_parts | join: ', ' %}
{% assign formatted_variant = formatted_variant | strip | remove_first: '-' | strip %}
<h2>{{ product_name_only }}</h2>
<h2>{{ formatted_variant }}</h2>

                              </div>
                            </div>
                            <img class="ma-redeem-icon" src="{{ 'icon-arrow-back.svg' | asset_url }}" alt="Icon">
                          </div>
                          <section class="ma-redeem-info">
                            <div class="ma-redeem-info-wrapper">
                              <img
                                src="https://api.qrserver.com/v1/create-qr-code/?size=150x150&data={{ data.qrcode | url_encode }}"
                                width="75px"
                                height="75px"
                                id="qrImage"
                                style="cursor:pointer;"
                              >
                              <div class="ma-redeem-data-wrapper">
                                <div class="ma-redeem-data">
                                  <div>
                                    <p>ICCID:</p>
                                    <h2 id="iccid-{{ forloop.parentloop.index }}-{{ forloop.index }}">{{ data.iccid }}</h2>
                                  </div>
                                  <button
                                    class="copy-button"
                                    onclick="copyText('iccid-{{ forloop.parentloop.index }}-{{ forloop.index }}')"
                                  >
                                    <img class="copy-button-icon" src="{{ 'icon-copy.svg' | asset_url }}" alt="Icon">
                                    <p>Copy</p>
                                  </button>
                                </div>
                                <div class="ma-redeem-data">
                                  <div>
                                    <p>SM-DP+Address:</p>
                                    <h2 id="SM-DP+Address-{{ forloop.parentloop.index }}-{{ forloop.index }}">{{ data.smdp }}</h2>
                                  </div>
                                  <button
                                    class="copy-button"
                                    onclick="copyText('SM-DP+Address-{{ forloop.parentloop.index }}-{{ forloop.index }}')"
                                  >
                                    <img class="copy-button-icon" src="{{ 'icon-copy.svg' | asset_url }}" alt="Icon">
                                    <p>Copy</p>
                                  </button>
                                </div>
                                <div class="ma-redeem-data">
                                  <div>
                                    <p>Activation Code:</p>
                                    <h2 id="activation-{{ forloop.parentloop.index }}-{{ forloop.index }}">
                                      {{ data.activationcode }}
                                    </h2>
                                  </div>
                                  <button
                                    class="copy-button"
                                    onclick="copyText('activation-{{ forloop.parentloop.index }}-{{ forloop.index }}')"
                                  >
                                    <img class="copy-button-icon" src="{{ 'icon-copy.svg' | asset_url }}" alt="Icon">
                                    <p>Copy</p>
                                  </button>
                                </div>
                                <div class="ma-redeem-data">
                                  <div>
                                    <p>SM-DP+Address:</p>
                                    <h2 id="SM+DP+Address+Android-{{ forloop.parentloop.index }}-{{ forloop.index }}">
                                      {{ data.qrcode }}
                                    </h2>
                                  </div>
                                  <button
                                    class="copy-button"
                                    onclick="copyText('SM+DP+Address+Android-{{ forloop.parentloop.index }}-{{ forloop.index }}')"
                                  >
                                    <img class="copy-button-icon" src="{{ 'icon-copy.svg' | asset_url }}" alt="Icon">
                                    <p>Copy</p>
                                  </button>
                                </div>
                              </div>
                            </div>
                          </section>
                        </div>
                      </section>
                  {% endfor %}
                </div>
              
                <div class="ma-order-details-wrapper">
                  <h2 class="bold">Order Summary</h2>
                  <section class="ma-order-summary">
                    {% render 'order-summary', order: order %}
                  </section>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </section>
    </div>
  </section>
</div>

<!-- script order-history copy yang befungsi untuk menampil order nya berdasarkan id yang diterima -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Ambil order_id dari URL
    const urlParams = new URLSearchParams(window.location.search);
    const orderId = urlParams.get('order_id');

    if (orderId) {
      // Sembunyikan semua order
      document.querySelectorAll('.ma-section-order-history-wrapper').forEach(function (orderWrapper) {
        let orderButton = orderWrapper.querySelector('.ma-product-wrapper');

        if (orderButton) {
          let orderDataId = orderButton.getAttribute('data-order-id');

          // Tampilkan hanya order yang sesuai dengan order_id dari URL
          if (orderDataId === orderId) {
            orderWrapper.style.display = 'flex';
          } else {
            orderWrapper.remove();
          }
        }
      });
    }
  });
</script>


