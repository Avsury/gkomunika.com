{% style %}
  .coverage {
    display: flex;
    flex-direction: column;
  }
  .coverage li {
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .coverage h3 {
    text-align: center;
    font-size: 20px;
    color: var(--color-primary);
    margin: 0;
  }
  .coverage img {
    border-radius: 15px;
    border: 1px solid var(--color-border);
  }
{% endstyle %}

{% assign countries_array = product.metafields.coverage.country.value %}
{% if countries_array.size > 0 %}
  {% for country in countries_array %}
    {% assign formatted_country = country | replace: '_', ' ' %}
    <div class="coverage" data-country="{{ country | downcase }}">
      <li>
        <img
          class="image-countries"
          src="{{ country | append: '.svg' | file_url }}"
          alt="{{ country }}"
          width="50"
          height="50"
          loading="lazy"
        >
        <h3>{{ formatted_country }}</h3>
      </li>
    </div>
  {% endfor %}
{% endif %}
