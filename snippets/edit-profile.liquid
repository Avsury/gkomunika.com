{% style %}
  .profile {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 30px;
  }
  .profile__title,
  .address__modal-title {
    font-weight: bold;
    color: var(--color-primary);
    margin: 0;
  }
  .profile__name {
    color: var(--color-primary);
    font-size: var(--font-large);
    font-weight: bold;
    margin: 5px 0;
  }
  .profile__info {
    width: 100%;
    padding: 15px;
    border-radius: 15px;
    background-color: var(--color-neutral);
  }
  .profile__label {
    color: #aaa;
  }
  .profile__details {
    display: flex;
    gap: 30px;
  }
  .profile__value {
    color: var(--color-primary);
    font-size: var(--font-large);
  }
  /* section profile-address */
  .profile-address {
    background-color: var(--color-neutral);
    border-radius: 15px;
    padding: 10px;
  }
  .profile-address__title {
    color: var(--color-primary);
    font-weight: bold;
  }
  .profile-address__wrapper {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 10px;
    margin-top: 10px;
  }
  .profile-address__icon {
    display: flex;
    align-items: center;
  }
  .button__modal-add,
  .button__modal-edit {
    border: none;
    background: transparent;
    align-text: center;
    display: flex;
    align-items: center;
    color: var(--color-secondary);
    font-weight: bold;
  }
  .address__modal-item {
    padding: 10px;
    border-radius: 15px;
    position: relative;
    display: flex;
    justify-content: space-between;
  }
  .address__modal-item:hover {
    background-color: var(--color-background);
    transition: background-color 0.1s ease;
  }
  .address__modal-item p {
    color: var(--color-primary);
  }
  .address__modal-field {
    position: relative;
    display: flex;
    flex-direction: column;
    margin-bottom: 16px;
  }
  .modal-field__wrapper {
    display: flex;
    gap: 15px;
  }

  .address__modal-field input,
  .address__modal-field select {
    width: 100%;
    padding: 12px;
    border: 1px solid var(--color-primary);
    border-radius: 6px;
    font-size: var(--font-large);
    box-sizing: border-box;
    transition: border-color 0.3s ease;
    display: flex;
    align-items: center;
  }
  #address_form_new {
    margin-top: 15px;
  }
  .address__modal-field input:focus,
  .address__modal-field select:focus {
    border-color: #2a6496;
    outline: none;
  }
  .address__modal-field input::placeholder {
    color: var(--color-primary);
  }

  .address__modal-field label {
    position: absolute;
    top: 8px;
    left: 12px;
    font-size: 16px;
    color: var(--color-primary);
    background-color: #fff;
    padding: 0 4px;
    transition: all 0.2s ease;
    pointer-events: none;
  }

  .address__modal-field input:focus + label,
  .address__modal-field input:not(:placeholder-shown) + label {
    top: -12px;
    left: 8px;
    font-size: 12px;
    color: var(--color-primary);
  }

  .address__modal-field select:focus + label,
  .address__modal-field select:not([value=""]) + label {
    top: -8px;
    left: 8px;
    font-size: 12px;
    color: var(--color-primary);
  }
  .address__modal-field select {
    position: relative;
    z-index: 999;
  }
  .address__modal-field input {
    color: var(--color-primary);
  }
  .address__modal-field select:focus {
    top: 0;
    color: var(--color-primary);
  }
  .address__modal-default {
    margin: 10px 0 15px;
    color: var(--color-primary);
    display: flex;
    gap: 5px;
  }
  .address__modal-default label {
    margin: 0;
  }
  .address__modal-button {
    width: 100%;
    display: flex;
    justify-content: right;
    gap: 10px;
  }
  .address__modal-button .submit,
  .address__modal-button .reset {
    padding: 15px;
    border-radius: 10px;
    border: none;
    color: var(--color-neutral);
    font-weight: bold;
    cursor: pointer;
  }
  .address__modal-button .submit {
    background-color: var(--color-primary);
  }
  .address__modal-button .reset {
    background-color: var(--color-secondary);
  }
  .address__modal-container {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.4);
    backdrop-filter: blur(8px);
  }

  .address__modal-wrapper {
    background-color: var(--color-neutral);
    margin: 10% auto;
    padding: 20px;
    border-radius: 15px;
    width: 80%;
    max-width: 500px;
    position: relative;
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    animation: fadeIn 0.3s ease;
  }

  /* Tombol address__modal-close di pojok kanan */
  .address__modal-close {
    color: #aaa;
    position: absolute;
    top: 10px;
    right: 20px;
    font-size: 24px;
    font-weight: bold;
    cursor: pointer;
    background-color: transparent;
    border: none;
  }

  .address__modal-close:hover {
    color: var(--color-primary);
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  @media (max-width: 768px) {
    .profile__details {
      display: flex;
      flex-direction: column;
    }
    .profile-address__wrapper {
      display: grid;
      grid-template-columns: repeat(1, 1fr);
    }
  }
{% endstyle %}

{%- assign first_name = customer.default_address.first_name -%}
{%- assign last_name = customer.default_address.last_name -%}
