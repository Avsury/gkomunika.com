{%- assign first_name = customer.default_address.first_name | default: '' -%}
{%- assign last_name = customer.default_address.last_name | default: '' -%}

<div class="profile" data-customer-addresses>
  <h2 class="profile__title">Profile</h2>
  <section class="profile__info">
    <span class="profile__name">{{ profile_name | default: 'Guest' }}</span>

    <div class="profile__details">
      <div class="profile__item">
        <span class="profile__label">Email</span>
        <p class="profile__value">{{ customer.email | escape }}</p>
      </div>
      <div class="profile__item">
        <span class="profile__label">Phone</span>
        <p class="profile__value">{{ customer.default_address.phone | default: 'Add Phone Number' }}</p>
      </div>
    </div>
  </section>

  <section class="profile-address">
    <div class="profile-address__icon">
      <span class="profile-address__title">{{ 'customer.addresses.title' | t }}</span>
      <button
        data-target="address__modal-add"
        class="button__modal-add"
      >
        <p>+ Add</p>
      </button>
    </div>
    <div class="profile-address__wrapper" data-address>
      <!-- Modal Add Address -->
      <div id="address__modal-add" class="address__modal-container">
        <div class="address__modal-wrapper">
          <button class="address__modal-close" data-close>&times;</button>
          <h2 class="address__modal-title">{{ 'customer.addresses.add' | t }}</h2>
          {%- form 'customer_address', customer.new_address, aria-labelledBy: 'AddressNewHeading' -%}
            <div class="modal-field__wrapper">
              <div class="address__modal-field">
                <input
                  type="text"
                  id="AddressFirstNameNew"
                  name="address[first_name]"
                  value="{{ form.first_name }}"
                  placeholder="{{ 'customer.addresses.first_name' | t }}"
                >
                <label for="AddressFirstNameNew">{{ 'customer.addresses.first_name' | t }}</label>
              </div>
              <div class="address__modal-field">
                <input
                  type="text"
                  id="AddressLastNameNew"
                  name="address[last_name]"
                  value="{{ form.last_name }}"
                  placeholder="{{ 'customer.addresses.last_name' | t }}"
                >
                <label for="AddressLastNameNew">{{ 'customer.addresses.last_name' | t }}</label>
              </div>
            </div>
            <div class="address__modal-field">
              <input
                type="text"
                id="AddressAddress1New"
                name="address[address1]"
                value="{{ form.address1 }}"
                placeholder="{{ 'customer.addresses.address1' | t }}"
              >
              <label for="AddressAddress1New">{{ 'customer.addresses.address1' | t }}</label>
            </div>
            <div class="address__modal-field">
              <input
                type="text"
                id="AddressCityNew"
                name="address[city]"
                value="{{ form.city }}"
                placeholder="{{ 'customer.addresses.city' | t }}"
              >
              <label for="AddressCityNew">{{ 'customer.addresses.city' | t }}</label>
            </div>
            <div class="address__modal-field">
              <label for="AddressCountryNew">{{ 'customer.addresses.country' | t }}</label>
              <select
                id="AddressCountryNew"
                name="address[country]"
                data-default="{{ form.country }}"
                onchange="Shopify.handleProvinceChange(event)"
              >
                {{ all_country_option_tags }}
              </select>
            </div>
            <div class="address__modal-field" id="AddressProvinceContainerNew" style="display: none;">
              <label for="AddressProvinceNew">{{ 'customer.addresses.province' | t }}</label>
              <select
                id="AddressProvinceNew"
                name="address[province]"
                data-default="{{ form.province }}"
              ></select>
            </div>
            <div class="address__modal-field">
              <input
                type="text"
                id="AddressZipNew"
                name="address[zip]"
                value="{{ form.zip }}"
                placeholder="{{ 'customer.addresses.zip' | t }}"
              >
              <label for="AddressZipNew">{{ 'customer.addresses.zip' | t }}</label>
            </div>
            <div class="address__modal-field">
              <input
                type="tel"
                id="AddressPhoneNew"
                name="address[phone]"
                value="{{ form.phone }}"
                placeholder="{{ 'customer.addresses.phone' | t }}"
              >
              <label for="AddressPhoneNew">{{ 'customer.addresses.phone' | t }}</label>
            </div>
            <div class="address__modal-default">
              {{ form.set_as_default_checkbox }}
              <label for="address_default_address_new">{{ 'customer.addresses.set_default' | t }}</label>
            </div>
            <div class="address__modal-button">
              <button class="submit" type="submit">{{ 'customer.addresses.add' | t }}</button>
            </div>
          {%- endform -%}
        </div>
      </div>

      <!-- List Addresses -->
      {%- for address in customer.addresses -%}
        <div class="address__modal-item">
          <p>{{ address | format_address }}</p>
          <div class="address__modal-icon">
            <button
              class="button__modal-edit button__modal-edit-{{ address.id }}"
              data-target="address__modal-edit-{{ address.id }}"
            >
              <img
                class="icon"
                src="{{ 'icon-edit-pencil.svg' | asset_url }}"
                alt="Edit Address"
                width="20"
                height="20"
                loading="lazy"
                decoding="async"
              >
            </button>
          </div>

          <!-- Modal Edit Address -->
          <div id="address__modal-edit-{{ address.id }}" class="address__modal-container">
            <div class="address__modal-wrapper">
              <h2 class="address__modal-title">{{ 'customer.addresses.edit_address' | t }}</h2>
              <button class="address__modal-close" data-close>&times;</button>
              {%- form 'customer_address', address -%}
                <div class="address__modal-default">
                  {{ form.set_as_default_checkbox }}
                  <label for="address_default_address_new">{{ 'customer.addresses.set_default' | t }}</label>
                </div>
                <div class="modal-field__wrapper">
                  <div class="address__modal-field">
                    <input type="text" name="address[first_name]" value="{{ form.first_name }}">
                    <label>{{ 'customer.addresses.first_name' | t }}</label>
                  </div>
                  <div class="address__modal-field">
                    <input type="text" name="address[last_name]" value="{{ form.last_name }}">
                    <label>{{ 'customer.addresses.last_name' | t }}</label>
                  </div>
                </div>
                <div class="address__modal-field">
                  <input type="text" name="address[address1]" value="{{ form.address1 }}">
                  <label>{{ 'customer.addresses.address1' | t }}</label>
                </div>
                <div class="address__modal-field">
                  <input type="text" name="address[city]" value="{{ form.city }}">
                  <label>{{ 'customer.addresses.city' | t }}</label>
                </div>
                <div class="address__modal-field">
                  <input type="text" name="address[zip]" value="{{ form.zip }}">
                  <label>{{ 'customer.addresses.zip' | t }}</label>
                </div>
                <div class="address__modal-field">
                  <input type="tel" name="address[phone]" value="{{ form.phone }}">
                  <label>{{ 'customer.addresses.phone' | t }}</label>
                </div>
                <div class="address__modal-button" data-address>
                  <button
                    class="reset"
                    type="button"
                    aria-label="{{ 'customer.addresses.delete' | t }} {{ forloop.index }}"
                    data-target="{{ address.url }}"
                    data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}"
                  >
                    {{ 'customer.addresses.delete' | t }}
                  </button>
                  <button class="submit" type="submit">{{ 'customer.addresses.update' | t }}</button>
                </div>
              {%- endform -%}
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </section>
</div>

<script>
  // Open address__modal-container
  document.querySelectorAll('[data-target]').forEach(button => {
    button.addEventListener('click', () => {
      const modalId = button.getAttribute('data-target');
      document.getElementById(modalId).style.display = 'block';
    });
  });

  // Close address__modal-container (with close button or click outside)
  document.querySelectorAll('.address__modal-container').forEach(modal => {
    modal.addEventListener('click', (event) => {
      if (event.target === modal || event.target.hasAttribute('data-close')) {
        modal.style.display = 'none';
      }
    });
  });
</script>

